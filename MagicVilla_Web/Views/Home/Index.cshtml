@using Microsoft.AspNetCore.Components;
@model IEnumerable<MagicVilla_Web.Models.Dto.VillaDTO>

<img class="d-block w-100" src="images/home/slide1.jpg" alt="" />

<hr />
<div class="row" style="--bs-gutter-x:0">
	@foreach(var villa in Model)
	{
		<div class="p-4 col-md-12 col-lg-6">
			<div class="row" style="border-radius: 20px">
				<div class="col-4">
					<img class="d-block w-100" style="border-radius: 20px" src="@villa.ImageUrl" alt="First" />
				</div>
				<div class="col-8">
					<p class="card-title text-warning">@villa.Name</p>
					<p class="card-text">
						@((MarkupString)villa.Details)
					</p>
				</div>
				<div class="col-12">
					<div class="row pb-3 pt-2">
						<div class="col-4">
							<a href="" class="btn btn-success form-control btn-block">Book</a>
						</div>
						<div class="col-4">
							<span>Max Occupancy : @villa.Occupancy adults</span>
							<span>Villa Size : @villa.SqFt sqft</span>
						</div>
						<div class="col-4">
							USD
							<span style="border-bottom: 1px solid #ff6a00">@villa.Rate.ToString("c")</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>